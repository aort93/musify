<!DOCTYPE html>
<html>
  <head>
    <title>Festly</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  </head>

  <body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">FESTLY</a>
                <a class="navbar-brand" href="/festivals">Home</a>
                <a class="navbar-brand" href="/artists">Artists</a>
                <a class="navbar-brand" href="/venues">Venues</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <% if(!current_user) %>
                        <li><a href="/login">Login</a></li>
                        <li><a href="/signup">Sign Up</a></li>
                    <% else %>
                        <li><%= link_to "Signed In As #{@user.name}", @user%></li>
                        <li><%= link_to "Logout", logout_path, method: :delete %></li>
                    <% end %>
                </ul>
            </div>
        </div>
    </nav>
    <%= yield %>
  </body>
</html>
