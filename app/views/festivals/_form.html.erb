          </div>
        <% end %>

        <div class="field form-group">
          <%= form.label :brand %>
          <%= form.text_field :brand, class: 'form-control' %>
        </div>

        <div class="field">
          <%= form.label :year %>
          <%= form.text_field :year, class: 'form-control' %>
        </div>

        <div class="field">
          <%= form.label :description %>
          <%= form.text_area :description, class: 'form-control' %>
        </div>

        <div class="field">
          <%= form.label :image %>
          <%= form.text_field :image, class: 'form-control' %>
        </div>

        <div class="field">
          <%= form.label :age_limit %>
          <%= form.number_field :age_limit, class: 'form-control' %>
        </div>

        <div class="field">
          <%= form.label :ticket_price %>
          <%= form.text_field :ticket_price, class: 'form-control' %>
        </div>

        <div class="field">
          <%= form.label :late_night? %>
          <%= form.check_box :late_night? %>
        </div>

        <div class="action form-group">
          <%= form.submit "Submit", :class => 'btn btn-lg btn-primary btn-block' %>
        </div>
      <% end %>
    </div>
