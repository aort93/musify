<h1>Venues</h1>

<table class ='table table-striped'>
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>State</th>
      <th>Capacity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @venues.each do |venue| %>
      <tr>
        <td><img class = "venue-image" src="<%= venue.image %>"></td>
        <td><%= link_to venue.name, venue %></td>
        <td><%= venue.state %></td>
        <td><%= venue.venue_capacity %></td>
        <td>
          <%= link_to 'See Venue', venue, :class => "btn btn-success btn-sm" %><br><br>
          <%if @user && @user.admin?%>
            <%= link_to 'Destroy', venue, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-sm" %>
          <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
